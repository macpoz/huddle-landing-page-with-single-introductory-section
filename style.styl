@import url('https://fonts.googleapis.com/css2?family=Open+Sans&family=Poppins:wght@400;600&display=swap');

$violet = hsl(257, 40%, 49%)
$soft-magenta = hsl(300, 69%, 71%)

$breakpoint = 768px


*
  margin 0
  padding 0
  font-family: 'Open Sans', sans-serif;

body
  display flex
  align-items center
  flex-direction column
  background-color $violet
  background-image url("./images/bg-mobile.svg")
  background-repeat no-repeat

  @media (min-width: $breakpoint)
    height 100vh
    background-image url("./images/bg-desktop.svg")
    background-position-y center
    background-size contain

.container
  display flex
  justify-content space-around
  flex-direction column
  width 300px
  margin 2rem 1.5rem
  height 100%
  @media (min-width: $breakpoint)
    min-width $breakpoint
    width auto
    margin 3.3rem 4.5rem
    max-width 1296px


  header
    img
      width 128px
      @media (min-width: $breakpoint)
        width 212px

  main
    margin-top 3.5rem
    display flex
    flex-direction column
    @media (min-width: $breakpoint)
      flex-direction row
      margin-top 5rem

    img
      width 100%
      @media (min-width: $breakpoint)
        width 709px

    div:last-of-type
      display flex
      justify-content center
      align-items center
      flex-direction column
      @media (min-width: $breakpoint)
        justify-content flex-start
        align-items flex-start
        margin-left 3.3rem

    h1,p
      color white
      text-align center
      @media (min-width: $breakpoint)
        text-align left

    h1
      font-family: 'Poppins', sans-serif;
      font-size 24px
      margin-top 3.5rem
      @media (min-width: $breakpoint)
        font-size 40px
        margin-top 2.8rem

    p
      margin-top 1rem
      line-height 1.5em
      @media (min-width: $breakpoint)
        margin-top 1.3rem
        font-size 18px
        letter-spacing 0.01em

    .register
      font-family: 'Poppins', sans-serif;
      padding: 0.7rem 4.7rem
      color $violet
      background-color white
      margin-top 1.5rem
      font-size 12px
      text-decoration none
      border-radius 2rem
      box-shadow 0 3px 10px -4px #000
      @media (min-width: $breakpoint)
        padding 0.9rem 4rem
        font-size 18px

      &:hover
        background-color $soft-magenta
        color white

  footer
    display flex
    justify-content center
    margin-top 4rem
    @media (min-width: $breakpoint)
      justify-content flex-end
      margin-top 1.2rem
      margin-right 0.6rem

    .socials
      display flex

      & > * + *
        margin-left .75rem
        @media (min-width: $breakpoint)
          margin-left .9rem

      .fab
        color white
        border-radius 2rem
        border 1px solid white
        width 26px
        height 26px
        display flex
        justify-content center
        align-items center
        font-size 12px
        @media (min-width: $breakpoint)
          font-size 18px
          width 38px
          height 38px

        &:hover
          color $soft-magenta
          border-color $soft-magenta
          cursor pointer
